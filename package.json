{
  "name": "extension-bookmarker",
  "displayName": "Extension Bookmarker",
  "description": "Bookmark Visual Studio Code extensions for later use.",
  "icon": "media/extension-bookmarker-icon-dark-mode.png",
  "version": "1.0.0",
  "publisher": "osxzxso",
  "repository": {
    "type": "git",
    "url": "https://github.com/osxzxso/extension-bookmarker.git"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension-bookmarker.addBookmark",
    "onCommand:extension-bookmarker.viewBookmarks",
    "onCommand:extension-bookmarker.removeBookmark",
    "onView:extensionBookmarkerView"
  ],
  "main": "./extension",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "extensionBookmarker",
          "title": "Extension Bookmarker",
          "icon": "media/activity-bar-icon.svg"
        }
      ]
    },
    "views": {
      "extensionBookmarker": [
        {
          "id": "extensionBookmarkerView",
          "name": "List"
        }
      ]
    },
    "commands": [
      {
        "command": "extension-bookmarker.addBookmark",
        "title": "‚ûï Add Extension Bookmark"
      },
      {
        "command": "extension-bookmarker.viewBookmarks",
        "title": "üëÅÔ∏è View Extension Bookmarks"
      },
      {
        "command": "extension-bookmarker.removeBookmark",
        "title": "üóëÔ∏è Remove Extension Bookmark"
      },
      {
        "command": "extension-bookmarker.addBookmarkFromUI",
        "title": "Add Extension Bookmark from UI",
        "icon": {
          "light": "media/light/add-bookmark-icon.svg",
          "dark": "media/dark/add-bookmark-icon.svg"
        }
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "extension-bookmarker.addBookmarkFromUI",
          "group": "navigation",
          "when": "view == extensionBookmarkerView"
        }
      ],
      "view/item/context": [
        {
          "command": "extension-bookmarker.removeBookmark",
          "group": "0_extension_bookmarker",
          "when": "view == extensionBookmarkerView && viewItem == bookmarkedExtension"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Extension Bookmarker Configuration",
      "properties": {
        "extension-bookmarker.bookmarkedExtensions": {
          "type": "array",
          "default": [],
          "description": "List of bookmarked extensions"
        }
      }
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@types/node": "^12.20.4",
    "tslint": "^5.12.1",
    "typescript": "^4.4.3",
    "vscode": "^1.1.37"
  },
  "dependencies": {
    "axios": "^1.4.0"
  }
}
